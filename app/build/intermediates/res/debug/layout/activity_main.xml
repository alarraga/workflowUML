<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#e16d0c"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <EditText
        android:id="@+id/name"
        android:layout_width="623dp"
        android:layout_marginRight="10dp"
        android:textColor="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:hint="Enter name:" />

    </LinearLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="4080dp"
        android:id="@+id/imageView"
        android:src="@mipmap/nao"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/linearLayout"
        android:layout_toStartOf="@+id/linearLayout"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp" />

    <Button
        android:id="@+id/start_workflow"
        android:layout_width="wrap_content"
        android:background="#49ab76"
        android:textSize="24dp"

        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:text="              LET&apos;S DO THIS              "
        android:layout_marginLeft="199dp"
        android:layout_marginStart="199dp"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:textStyle="bold" />

    <TextView android:text="Hi Teacher, \n \n Do you want to build your own GAME?  \n Well, let&apos;s start it. Which will be the name of this game?"
        android:layout_width="784dp"

        android:textSize="30dp"
        android:textStyle="normal|bold|italic"
        android:textColor="#fdfff7"

        android:layout_height="wrap_content"
        android:fontFamily="@android:string/dialog_alert_title"
        android:layout_above="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

</RelativeLayout>
