<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#e16d0c"
    android:layout_height="match_parent">
    <ImageView

        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/done_temp"
        android:background="@mipmap/done"
        android:id="@+id/imageView2" />
    <TextView
        android:id="@+id/done_temp"
        android:text="Good job!"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="22dp"
        android:textColor="#fff"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/done_temp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp">

        <Button
            android:id="@+id/edit_button"
            android:text="Edit"
            android:textSize="22dp"
            android:layout_width="257dp"
            android:background="#F4D8A8"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exit_button"
            android:layout_alignRight="@+id/exit_button"
            android:layout_alignEnd="@+id/exit_button"
            android:layout_gravity="bottom" />

        <Button
            android:id="@+id/exit_button"
            android:text="Exit"
            android:textSize="22dp"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:background="#49ab76"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_below="@+id/done_temp"
            android:layout_marginTop="88dp"
            android:layout_gravity="bottom" />

    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/ale/Downloads/WorkflowUml-master%20(2)/workflowUML/app/src/main/res/layout/on_game_complete.xml -->