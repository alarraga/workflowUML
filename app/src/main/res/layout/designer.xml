<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="#006600"
    android:layout_height="match_parent">
   <LinearLayout
       android:id="@+id/temp"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           >
           <TextView android:text="Name of Game"
               android:id="@+id/workflow_name"
               android:layout_marginTop="22dp"
               android:layout_marginBottom="22dp"
               android:textColor="#fff"
               android:layout_width="wrap_content"
               android:layout_centerInParent="true"
               android:layout_gravity="center"
               android:textSize="21dp"
               android:textStyle="bold"

               android:layout_height="wrap_content" />
           <Button
               android:id="@+id/generate_button"
               android:textColor="#003300"
               android:layout_centerVertical="true"
               android:background="@mipmap/save"
               android:textStyle="bold"
               android:layout_margin="3dp"
               android:padding="10dp"
               android:layout_alignParentRight="true"
               android:layout_width="50dp"
               android:layout_marginRight="10dp"
               android:layout_height="50dp"
               />

           <Button
               android:id="@+id/back_button"
               android:textColor="#003300"
               android:layout_centerVertical="true"
               android:background="@drawable/button"
               android:textStyle="bold"
               android:layout_margin="3dp"
               android:padding="10dp"
               android:layout_alignParentLeft="true"
               android:layout_width="wrap_content"
               android:layout_marginRight="10dp"
               android:layout_height="wrap_content"
               android:text="Back"
               />
       </RelativeLayout>


       <View
           android:layout_width="match_parent"
           android:layout_height="2.5dp"
           android:background="#fff" />
   </LinearLayout>




  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <TextView android:text="Add :"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="5dp"
              android:textColor="#fff"
              android:layout_width="wrap_content"

              android:textSize="19dp"
              android:layout_gravity="center"
              android:textStyle="bold"

              android:layout_height="wrap_content" />
          <Button
              android:id="@+id/activity_button"
              android:layout_width="120dp"
              android:padding="10dp"
              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:background="@drawable/button"
              android:textStyle="bold"

              android:textColor="#003300"
              android:text="Activity"
              />

          <Button
              android:id="@+id/activities_button"
              android:layout_width="120dp"
              android:background="@drawable/button"
              android:textStyle="bold"

              android:padding="10dp"
              android:textColor="#003300"
              android:layout_margin="3dp"
              android:layout_height="wrap_content"
              android:text="Activities"
              />
          <View
              android:layout_width="fill_parent"
              android:layout_height="2.5dp"

              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:background="#fff" />
          <TextView android:text="Conditions :"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="5dp"
              android:textColor="#fff"
              android:layout_width="wrap_content"

              android:textSize="19dp"
              android:layout_gravity="center"
              android:textStyle="bold"

              android:layout_height="wrap_content" />
          <Button
              android:id="@+id/if_button"
              android:layout_width="120dp"
              android:layout_margin="3dp"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@drawable/button"
              android:textStyle="bold"
              android:textColor="#003300"
              android:text="If"
              />
          <Button
              android:id="@+id/else_button"
              android:layout_width="120dp"
              android:background="@drawable/button"
              android:textStyle="bold"
              android:textColor="#003300"
              android:padding="10dp"

              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:text="Else"
              />
          <Button
              android:id="@+id/repeat_button"
              android:layout_width="120dp"
              android:padding="10dp"
              android:layout_margin="3dp"
              android:background="@drawable/button"
              android:textStyle="bold"
              android:textColor="#003300"
              android:layout_height="wrap_content"
              android:text="Repeat"
              />
          <View
              android:layout_width="fill_parent"
              android:layout_height="2.5dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:background="#fff" />
          <TextView android:text="Edit :"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="5dp"
              android:textColor="#fff"
              android:layout_width="wrap_content"

              android:textSize="19dp"
              android:layout_gravity="center"
              android:textStyle="bold"

              android:layout_height="wrap_content" />
          <Button
              android:id="@+id/delete_button"
              android:layout_width="120dp"
              android:padding="10dp"
              android:background="@drawable/button"
              android:textStyle="bold"
              android:textColor="#003300"
              android:layout_margin="3dp"
              android:layout_height="wrap_content"
              android:text="Delete"
              />

      </LinearLayout>
      <View
          android:layout_width="2.5dp"
          android:layout_height="fill_parent"
          android:layout_marginLeft="5dp"
          android:background="#fff" />
      <WebView
          android:id="@+id/web_designer"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent">


      </WebView>

  </LinearLayout>

</LinearLayout>